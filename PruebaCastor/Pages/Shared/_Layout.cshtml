<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - PruebaCastor</title>
    
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link href="~/css/bootstrap/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/PruebaCastor.styles.css" asp-append-version="true" />

</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-page="/Index">PruebaCastor</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Busqueda">Buscar</a>
                        </li>
                        <li class="nav-item">
                            <button id="btninicio" style="display: none" class="btn btn-primary" onclick="loginWithSpotify()">Iniciar sesión con Spotify</button>
                         </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @{
                await Html.RenderPartialAsync("Error");
            }
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - PruebaCastor - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/crypto-js/4.1.1/crypto-js.min.js"></script>
    <script src="~/Scripts/Login.js"></script>
    <script src="~/Scripts/Services/AuteticationServices.js"></script>
    <script src="~/Scripts/Services/SpotifyServices.js"></script>
    <script src="~/Scripts/Common/Error.js"></script>
    <script src="~/Scripts/Detalle.js"></script>
    <script src="~/Scripts/Tabla.js"></script>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>

    <!--#region Datatable  -->
    <script src="~/lib/DataTables/DataTables-1.10.24/js/jquery.dataTables.js"></script>
    <script src="~/lib/DataTables/DataTables-1.10.24/js/dataTables.bootstrap4.js"></script>
    <script src="~/lib/DataTables/FixedHeader-3.1.8/js/dataTables.fixedHeader.js"></script>
    <script src="~/lib/DataTables/FixedColumns-3.3.2/js/dataTables.fixedColumns.js"></script>
    <script src="~/lib/DataTables/Buttons-1.7.0/js/dataTables.buttons.js"></script>
    <script src="~/lib/DataTables/JSZip-2.5.0/jszip.js"></script>
    <script src="~/lib/DataTables/pdfmake-0.1.36/pdfmake.js"></script>
    <script src="~/lib/DataTables/pdfmake-0.1.36/vfs_fonts.js"></script>
    <script src="~/lib/DataTables/Buttons-1.7.0/js/buttons.html5.js"></script>
    <script src="~/lib/DataTables/Buttons-1.7.0/js/buttons.print.js"></script>
    <!--#endregion Datatable-->

    @await RenderSectionAsync("Scripts", required: false)

</body>
</html>